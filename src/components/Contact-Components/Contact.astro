<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }
    
    form{
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 30px;
        width: 35em;
        
        background-color: rgb(0, 0, 0, .5);
    }

    .text-content{
        color: white;
        margin: auto;
    }

    .input{
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: end;
        height: 60px;
        width: auto;
    }

    .text-area{
        height: 150px;
        width: auto;
    }

    input, textarea {
        border: none;
        outline: none;
        border-bottom: 1px solid rgb(94, 16, 167);
        height: 40px;
        padding: 10px 5px;
        color: white;
        background-color: transparent;
    }

    
    textarea{
        height: 150px;
        width: 100%;
        padding: 20px 10px;
        resize: none;
    }

    input:focus + label,
    input:not(:placeholder-shown) + label,
    textarea:focus + label,
    textarea:not(:placeholder-shown) + label{

        transform: translateY(0px) scale(.7);
        transform-origin: left top;
    }

    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
    }

    /* Firefox */
    input[type=number] {
    -moz-appearance: textfield;
    }

    label{
        position: absolute;
        left: 5px;
        top: 0px;
        color: rgb(209, 209, 209);
        transform: translateY(30px);
        transition:transform ease-in .3s, color ease-in .3s;
        cursor: pointer;
    }

    label::after{
        content: "*";
        color: rgb(92, 0, 141);
        padding: 2px;
    }
    
    button{
          background: none;
          border: none;
          width: 280px;
          margin: auto;
          padding: 10px 20px;
          background-color: rgb(92, 0, 141);
          color: white;
          box-shadow: 0px 2px 5px rgba(255, 255, 255, 0.1);
          text-align: center;
          border-radius: 10px;
          font-size: 17px;
          font-weight: 500;
          cursor: pointer;
          transition: all .5s;
     }

     button:hover{
          background-color:rgb(93, 68, 235);
          border: none;
     }

     @media (max-width: 430px){
        form{
            width: 360px;
        }
     }
</style>