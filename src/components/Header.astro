---
    

export interface Props{
home: string,
about: string,
blog: string,
contact: string
}

const {home, about, contact, blog} = Astro.props

---

<script>

    // scroll header

    const headerScroll = document.querySelector(".header");

    window.addEventListener('scroll', () => {
        // scroll n cantidad de px
    if (headerScroll && window.pageYOffset > 100) {
        headerScroll.classList.add('header-scroll');
    } else {
        headerScroll ? headerScroll.classList.remove('header-scroll') : null;
    }
    });

    // menu hamburguesa

    const menuHamb:any = document.querySelector('.menu-hamb');
    const navigator:any = document.querySelector('.navigator');
    
    menuHamb.addEventListener('click', function() {
      navigator.classList.toggle('show');
      menuHamb.classList.toggle('active');
    });
</script>

<header class="header">
        <img class="desktop" src="/public/images/TzoneLogo.png" alt="logo image">
        <img class="mobile" src="../../public/images/isotipo-TZone-white.svg" alt="isotipo-Tzone">
        <nav class="navigator">
            <ul class="ul">
                <li><a href={home}>Home</a></li>
                <li><a href={about}>About</a></li>
                <li><a href={blog}>Blog</a></li>
            </ul>
        </nav>
        <span class="material-symbols-outlined menu-hamb">menu</span>
    <a class="text-slate-100 text-l contact" href={contact}>CONTACT</a>
</header>

<style>

    *{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Roboto', sans-serif;
		list-style: none;
        text-decoration: none;
	}

    header{
        position: absolute;
        top: 0;
        z-index: 500;
        display: flex;
        height: 100px;
        width: 91%;
        left: 4%;
        justify-content: space-evenly;
        border-bottom: 1px solid white;
    }

    .navigator {
        margin: auto;
        width: 300px;
    }

    .menu-hamb {
        display: none;
    }

    ul{
        position: relative;
        display: flex;
        justify-content: space-between;
    }

    .desktop {
        width: 250px;
        margin: auto auto auto 60px;
    }

    .mobile{
        height: 80px;
        display: none;
    }

    li > a{
        font-size: 20px;
        color: rgb(235, 235, 235);
        font-weight: 500;
        transition: all .3s;
    }

    li > a:hover{
        font-size: 23px;
        padding: 5px;
        color:rgb(93, 68, 235) ;
    }

    .contact{
        margin: auto 30px auto auto;
        font-weight: 500;
        padding: 10px 25px;
        border-radius: 7px;
        background-color: rgb(92, 0, 141);
        color: white;
        transition: all .2s ease-in;
        margin-right: 90px;
    }

    .contact:hover{
        background-color:rgb(93, 68, 235);
        padding: 15px 25px;
    }

    @media (max-width: 430px){

        header{
            width: 91%;
            position: fixed;
            transition: all ease-in-out .5s;
        }

        .header-scroll{
            width: 100%;
            background-color: rgb(8, 4, 32);
            background-image: linear-gradient(
                90deg,
                rgba(0, 0, 0, 0.5),
                rgba(22, 9, 94, 0.5)
            );
            left: 0;
            padding: 10px;
            height: 120px;
        }

        .menu-hamb{
            position: relative;
            right: 0px;
            margin: auto;
            display: block;
            font-size: 40px;
            transition: font-size ease-out .3s, border ease-out .3s;
            color: white;
        }

        .active{
            font-size: 30px;
            border: 1px solid white;
            border-radius: 5px;

        }

        .contact, .desktop{
            display: none;
        }

        .mobile{
            display: block;
            margin: auto;
        }


        .navigator{
            position: relative;
            top: 120px;
            left: 350px;
            /* height: 100vh; */
            /* background-image: linear-gradient(
                90deg,
                rgba(0,0,0,.8),
                rgba(0,0,0,.0)
            ); */
            overflow: hidden;
            transition: left ease-in-out .5s;
            filter: drop-shadow(3px 5px 5px rgb(36, 34, 46));
            border-left: 1px solid white;
            border-radius: 20px;

        }
      
        ul{
            flex-direction: column;
            gap: 25px;
            align-items: flex-end;
            justify-content: center;
            margin: 30px 20px;
            
        }

        li{
            width: 100%;
            border-radius: 10px 0 0 10px;
            background-color: rgb(15, 6, 66);
            padding: 10px;
            border-bottom: 1px solid rgb(255, 255, 255);
            border-top: 3px solid rgb(93, 68, 235);
        
        }



        .show{
            left: 90px
        }

    }
</style>