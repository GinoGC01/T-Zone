---


const posts = await Astro.glob('../../pages/blog/posts/*.md');

function postsPrincipals(){
    return(
        [...posts]
        .reverse()
        // .slice(0, 9)
    )
}

let postPrincipal:any = (postsPrincipals());

---

 <section id="recient-News">
        <ul class="list-content">
            {
                postPrincipal.map((post:any)=>{
                    const { title, image, description, pubDate, author, id} = post.frontmatter
                    return(
                    <li id={id}>
                        <div class="post-container">
                                <img src={image} alt="img-post">
                                <a href={post.url} class="text-content">
                                    <h2>{title}</h2>
                                    <p>{description}</p>
                                    <h3>published on {pubDate} by: {author} </h3>
                                </a>
                            </div>
                    </li>
                    )
                })
            }
        </ul>
 </section>

<style>

    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
    
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    .list-content{
        display: flex;
        flex-direction: column;
        gap: 0px;
    }

    .list-content > li{
        padding: 20px;
        height: 260px;
        border-bottom: 1px solid white;
        background-color: rgba(0, 0, 0, .2);
        margin: 0 20px;
    }

    .post-container{
        position: relative;
        display: flex;
        gap: 20px;
        width: 98%;
        margin: auto;
        
        
    }

    .post-container > img{
        width: 300px;
        height: 220px;
        object-fit: cover;
    }

    .text-content{
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .text-content > h2{
        color:white;
        filter: drop-shadow(3px 2px 0 rgb(94, 16, 167));
        font-size: 30px;
        text-transform: uppercase;
    }

    .text-content > p{
        font-size: 20px;
        color: white;
    }

    .text-content > h3{
        position: absolute;
        bottom: 0;
        font-weight: 500;
        font-size: 16px;
        color: rgb(182, 182, 182);
    }

    @media (max-width: 430px){

        .post-container{
            height: 100%
        }

        .text-content{
            position: absolute;
            bottom:0;
            flex-direction: column;
            background-color: rgba(46, 29, 143, 0.8)
        }

        .list-content > li{
            border: none;
            width: 100%;
            height: 350px;
            padding: 10px 0;
            margin: 0;
        }

        .post-container > img{
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .text-content{
            padding: 10px 5px;
            display: flex;
            justify-content: space-between;
            position: absolute;
            height: 140px;
            width: 100%;
        }

        .text-content > h3{
            position: static;
            font-weight: 500;
        }

        .text-content > h2 {
            color: white;
            filter: drop-shadow(3px 2px 0 rgb(32, 6, 56));
            font-size: 25px;

        }

        .text-content > h2,.text-content > h3, .text-content > p {
            padding: 0 10px;
        }



    }
</style>