---
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/images/isotipo-TZone-white.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
		<script src="https://kit.fontawesome.com/755623a2e2.js" crossorigin="anonymous"></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer/>
	</body>
</html>
<style>
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	body{
		scroll-behavior: smooth;
	}

    body::-webkit-scrollbar {
    width: 10px;
    height: 0px;
    }

    /* Track */
    body::-webkit-scrollbar-track { 
    border-radius: 10px;
	background-color: rgb(3, 3, 44);
	
    }
    
    /* Handle */
    body::-webkit-scrollbar-thumb {
    background: rgb(94, 16, 167); 
    border-radius: 10px;
    }

    /* Handle on hover */
    body::-webkit-scrollbar-thumb:hover {
    background: rgb(67, 13, 117); 
    }

</style>